<% include partials/header %>

<div class="col-md-12">
    <form class="form-signin text-center" action = "/campgrounds" method = "POST">
      <h1 class="h3 mb-3 font-weight-normal">Add a new campground</h1>
      <label for="inputText" class="sr-only">Name of Campground</label>
      <input type="text" id="inputText" class="form-control" name="name" placeholder="Name" required autofocus>
      <label for="inputUrl" class="sr-only">Image URL</label>
      <input type="url" id="inputUrl" class="form-control" name="image" placeholder="URL" required>
      <label for="inputDesc" class="sr-only">Description</label>
      <input type="text" id="inputDesc" class="form-control" name="Desc" placeholder="Description" required>

      <button class="btn btn-lg btn-primary btn-block" type="submit">Submit</button>
      <p class="mt-5 mb-3 text-muted">&copy; 2017-2018</p>
    </form>
</div>

<% include partials/footer %>