<% include ../partials/header %>

<div class="col-md-12">
    <h1 class="h3 mb-3 font-weight-normal text-center">Add a new Comment to <%= campground.name %></h1>
    <form class="form-signin text-center" action = "/campgrounds/<%=campground._id%>/comments" method = "POST">
      <label for="inputName" class="sr-only">Name</label>
      <input type="text" id="inputName" class="form-control" name="comment[author]" placeholder="Name" required autofocus>
      <label for="inputText" class="sr-only">Text</label>
      <input type="text" id="inputText" class="form-control" name="comment[text]" placeholder="Text" required>

      <button class="btn btn-lg btn-primary btn-block" type="submit">Submit</button>
      <p class="mt-5 mb-3 text-muted">&copy; 2017-2018</p>
    </form>
</div>

<% include ../partials/footer %>